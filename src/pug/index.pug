            .splide__track
              ul.splide__list
                li.splide__slide.main-banner__item
                  p.main-banner__title.title
                    | Закажи онлайн — забери в пункте выдачи
                  .main-banner__link-wrap
                    span.main-banner__chevron
                    +link('узнать подробнее').main-banner__link
                      +icon('banner-arrow', 17, 19)
                  +picture('banner_01', 1320, 550)
                li.splide__slide
                  p.main-banner__title.title
                    | Закажи онлайн!
                  .main-banner__link-wrap
                    span.main-banner__chevron
                    +link('узнать подробнее').main-banner__link
                      +icon('banner-arrow', 17, 19)
                  +picture('banner_02', 1320, 550)
            .splide__progress
              .splide__progress__bar.main-banner__progress-bar
    section.catalog
      .container
        .row
          .col.s12
            h2.title каталог
        .row
          .col.s12.m6.l4
            .catalog__card
              .catalog__img-wrap
                .catalog__polygon.pentagon
                +pictureLazy('catalog_01', 77, 64, 'png')
          .col.s12.m6.l4
            .catalog__card
              .catalog__img-wrap
                .catalog__polygon.rhombus
                +pictureLazy('catalog_02', 78, 96, 'png')
          .col.s12.m6.l4
            .catalog__card
              .catalog__img-wrap
                .catalog__polygon.hexagon
                +pictureLazy('catalog_03', 59, 78, 'png')











